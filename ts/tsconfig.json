{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "preserve",
        "jsxFactory": "VueTsxSupport",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "pretty": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": [
        "packages/**/*.ts",
        "targets/**/*.ts"
      ],
    "exclude": [
        "node_modules"
    ]
}